<%- include('partials/header', {
  title: 'Admin Dashboard - Honeypot Analytics',
  description: 'Security monitoring and analytics',
  bodyClass: 'admin-dashboard-page'
}) %>

<!-- Educational: Admin Dashboard with ECharts Visualizations
     Key Features:
     1. Real-time data visualization with Apache ECharts
     2. Multiple chart types (line, bar, pie, table)
     3. Auto-refresh every 30 seconds
     4. CSV export functionality
     5. Responsive design (mobile-friendly)
     6. Professional security dashboard appearance
-->

<!-- Navigation Bar -->
<nav class="navbar navbar-dark bg-dark sticky-top shadow-sm">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">
      <i class="bi bi-shield-check me-2"></i>
      Honeypot Admin Dashboard
    </span>
    <div class="d-flex align-items-center">
      <!-- Auto-refresh indicator -->
      <span class="badge bg-success me-3" id="refreshIndicator">
        <i class="bi bi-arrow-clockwise me-1"></i>
        Auto-refresh: ON
      </span>
      <!-- Logout button -->
      <form action="/admin2430.html/logout" method="POST" class="d-inline">
        <button type="submit" class="btn btn-outline-light btn-sm">
          <i class="bi bi-box-arrow-right me-1"></i>
          Logout
        </button>
      </form>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="container-fluid py-4">

  <!-- Overview Stats Cards -->
  <div class="row mb-4" id="statsCards">
    <div class="col-md-3 mb-3">
      <div class="card border-primary">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Total Attempts</h6>
              <h3 class="mb-0" id="totalAttempts">-</h3>
            </div>
            <div class="text-primary">
              <i class="bi bi-activity" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <div class="card border-danger">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Unique IPs</h6>
              <h3 class="mb-0" id="uniqueIPs">-</h3>
            </div>
            <div class="text-danger">
              <i class="bi bi-geo-alt-fill" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <div class="card border-warning">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Unique Usernames</h6>
              <h3 class="mb-0" id="uniqueUsernames">-</h3>
            </div>
            <div class="text-warning">
              <i class="bi bi-person-badge" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <div class="card border-info">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1">Avg Password Length</h6>
              <h3 class="mb-0"><span id="avgPasswordLength">-</span> chars</h3>
            </div>
            <div class="text-info">
              <i class="bi bi-key-fill" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row 1 -->
  <div class="row mb-4">
    <!-- Timeline Chart (Login Attempts Over Time) -->
    <div class="col-lg-8 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="bi bi-graph-up me-2"></i>
            Login Attempts Timeline (Last 7 Days)
          </h5>
        </div>
        <div class="card-body">
          <div id="timelineChart" style="width: 100%; height: 350px;"></div>
        </div>
      </div>
    </div>

    <!-- Request Distribution Pie Chart -->
    <div class="col-lg-4 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="bi bi-pie-chart me-2"></i>
            Request Distribution
          </h5>
        </div>
        <div class="card-body">
          <div id="requestPieChart" style="width: 100%; height: 350px;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row 2 -->
  <div class="row mb-4">
    <!-- Top Attacking IPs -->
    <div class="col-lg-6 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="bi bi-globe me-2"></i>
            Top Attacking IP Addresses
          </h5>
        </div>
        <div class="card-body">
          <div id="topIPsChart" style="width: 100%; height: 350px;"></div>
        </div>
      </div>
    </div>

    <!-- Top Attempted Usernames -->
    <div class="col-lg-6 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0">
            <i class="bi bi-person-lines-fill me-2"></i>
            Most Common Usernames
          </h5>
        </div>
        <div class="card-body">
          <div id="topUsernamesChart" style="width: 100%; height: 350px;"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Attempts Table -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="bi bi-table me-2"></i>
            Recent Login Attempts
          </h5>
          <button class="btn btn-sm btn-outline-primary" onclick="exportToCSV()">
            <i class="bi bi-download me-1"></i>
            Export CSV
          </button>
        </div>
        <div class="card-body">
          <!-- Table Container -->
          <div class="table-responsive">
            <table class="table table-hover table-striped" id="attemptsTable">
              <thead class="table-dark">
                <tr>
                  <th>Timestamp</th>
                  <th>IP Address</th>
                  <th>Username</th>
                  <th>Password</th>
                  <th>Length</th>
                </tr>
              </thead>
              <tbody id="attemptsTableBody">
                <tr>
                  <td colspan="5" class="text-center">
                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                      <span class="visually-hidden">Loading...</span>
                    </div>
                    Loading data...
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <nav aria-label="Table pagination" class="mt-3">
            <ul class="pagination justify-content-center" id="pagination">
              <!-- Pagination buttons will be generated by JavaScript -->
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>

</div>

<!-- Educational: Load ECharts library and dashboard JavaScript -->
<%- include('partials/footer', {
  needsEcharts: true,
  scripts: ['/js/echarts-config.js', '/js/dashboard.js']
}) %>
